public class Main {
    public static void main(String[] args) {


        int[][] num1 = {{1, 2, 3},
                {5, 4, 7},
                 {8, 15,9}};
        System.out.println("Row size=" + num1.length);
       System.out.println("Column Size= " + num1[0].length);
        for (int i = 0; i < num1.length; i++) {
             int max=num1[i][0];
           for (int j = 0; j < num1[i].length; j++) {
                 if(num1[i][j] > max) max =num1[i][j];
            }
            System.out.println("Max value in row- " + (i+1) +" " + max);
       }
         

        }



    }

