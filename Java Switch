public class Main
{
	public static void main(String[] args) {
		  String day = "Tuesday";
		  switch(day){
		      case "Sunday" : System.out.println("It's Sunday"); //if this case matches then execute the print  
		      break; //as this case is matched so it will stop checking
		      case "Monday" : System.out.println("It's Monday"); //if the case does't match, then it will continue
		      break; //if we don't use break, then it will print everything from the line where case matches
		      case "Tuesday" : System.out.println("It's Tuesday");
		      break;
		      case "Wednesday" : System.out.println("It's Wednesday");
		      break;
		      case "Thursday" : System.out.println("It's Thursday");
		      break;
		      case "Friday" : System.out.println("It's Friday");
		      break;
		      case "Saturday" : System.out.println("It's Saturday");
		      break;
                      default : System.out.println("that is not a day");
		  }
		 
	}
}
